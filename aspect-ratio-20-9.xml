<!-- 
16:9 aspect ratio
based on 2400x1080
-->
<theme>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <clock name="clock">
         <pos>${statusBarXLPos} ${statsBarYTPos}</pos>
         <fontSize>${statusBarHeight}</fontSize>
      </clock>
      <systemstatus name="system-status">
         <pos>0.99375 ${statsBarYTPos}</pos><!-- 2385 -->
         <height>${statusBarHeight}</height>
         <textRelativeScale>0.9</textRelativeScale>
         <entrySpacing>0.0104167</entrySpacing><!-- 25 -->
      </systemstatus>
      <helpsystem name="help-left,help-right">
         <fontSize>${statusBarHeight}</fontSize>
         <entryRelativeScale>0.9</entryRelativeScale>
         <entrySpacing>0.0104167</entrySpacing><!-- 25 -->
         <iconTextSpacing>0.0052083</iconTextSpacing><!-- 12.5 -->
      </helpsystem>
      <helpsystem name="help-left">
         <pos>${statusBarXLPos} ${statsBarYBPos}</pos>
      </helpsystem>
      <helpsystem name="help-right">
         <pos>${statusBarXRPos} ${statsBarYBPos}</pos>
      </helpsystem>
      <image name="metadata-line">
         <pos>0.39 0.5</pos>
         <size>0.61 0.0037037</size>
      </image>
   </view>
   <fontSize name="small,medium,large">
      <variables>
         <statusBarXLPos>0.0104167</statusBarXLPos><!-- 25 -->
         <statusBarXRPos>0.9895833</statusBarXRPos><!-- 2375 -->
         <statsBarYTPos>0.0231481</statsBarYTPos><!-- 25 -->
         <statsBarYBPos>0.9768519</statsBarYBPos><!-- 1055 -->
      </variables>
   </fontSize>
   <fontSize name="small">
      <variables>
         <statusBarHeight>0.0277778</statusBarHeight><!-- 30 -->
      </variables>
   </fontSize>
   <fontSize name="medium">
      <variables>
         <statusBarHeight>0.037037</statusBarHeight><!-- 40 -->
      </variables>
   </fontSize>
   <fontSize name="large">
      <variables>
         <statusBarHeight>0.0462963</statusBarHeight><!-- 50 -->
      </variables>
   </fontSize>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <carousel name="system-carousel">
         <pos>0 0.1259259</pos><!-- 0 136 -->
         <size>1 0.2314815</size><!-- 100% 250 -->
         <itemSize>0.0866667 0.1925926</itemSize><!-- 208 208 -->
         <itemScale>1.2</itemScale>
         <horizontalOffset>-0.25</horizontalOffset>
         <maxItemCount>6</maxItemCount>
      </carousel>
      <text name="system-name,system-name-shadow">
         <size>0.61 0.059</size>
         <fontSize>0.05</fontSize><!-- 54 -->
         <lineSpacing>1.2</lineSpacing>
         <container>true</container>
         <containerType>horizontal</containerType>
      </text>
      <text name="system-count,system-count-shadow">
         <pos>0.39 0.525</pos>
         <size>0.61 0</size>
         <fontSize>0.04</fontSize>
         <lineSpacing>1.2</lineSpacing>
      </text>
      <text name="system-name">
         <pos>0.39 0.475</pos>
      </text>
      <text name="system-name-shadow">
         <pos>0.39 0.478</pos>
      </text>
      <text name="system-count">
         <pos>0.39 0.525</pos>
      </text>
      <text name="system-count-shadow">
         <pos>0.39 0.528</pos>
      </text>
      <image name="system-content">
         <pos>0.25 0.4916667</pos><!-- - 531 -->
         <maxSize>0.1041667 0.2314815</maxSize><!-- 250 250 -->
      </image>
      <helpsystem name="help-left">
         <entries>start</entries>
      </helpsystem>
      <helpsystem name="help-right">
         <entries>a</entries>
      </helpsystem>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="gamelist">
      <carousel name="gamelist-carousel">
         <pos>0.25 0</pos><!-- - 0 -->
         <size>1 1</size>
         <itemSize>0.1116667 0.170</itemSize> 
         <itemScale>1.9</itemScale>
         <selectedItemMargins>0.04 0.04</selectedItemMargins>
         <imageCornerRadius>0.005</imageCornerRadius>
         <fontSize>0.0222222</fontSize><!-- 24 -->
         <lineSpacing>1.2</lineSpacing>
         <textBackgroundCornerRadius>0.005</textBackgroundCornerRadius>
         <textRelativeScale>0.8</textRelativeScale>
         <maxItemCount>5</maxItemCount>
      </carousel>
      <image name="back-arrow">
         <pos>0.1 0.5</pos>
         <maxSize>0.1 0.1</maxSize>
      </image>
      <video name="game-video">
         <pos>0.25 0.5</pos>
         <cropSize>0.2241667 0.33</cropSize> 
      </video>
      <text name="system-name">
         <pos>0.39 0.4</pos>
         <size>0.61 0</size>
         <fontSize>0.025</fontSize>
         <lineSpacing>1.2</lineSpacing>
      </text>
      <text name="game-name,game-name-shadow">
         <size>0.61 0.059</size>
         <fontSize>0.05</fontSize><!-- 54 -->
         <lineSpacing>1.2</lineSpacing>
         <container>true</container>
         <containerType>horizontal</containerType>
      </text>
      <text name="game-name">
         <pos>0.39 0.475</pos>
      </text>
      <text name="game-name-shadow">
         <pos>0.39 0.478</pos>
      </text>
      <badges name="game-badges">
         <pos>0.95 0.5</pos>
         <size>1 0.06</size>
      </badges>
      <image name="game-playtime-icon">
         <pos>0.39 0.525</pos>
         <size>0.0183333 0.0407407</size><!-- 44 44 -->
      </image>
      <image name="game-playtime-icon-shadow">
         <pos>0.39 0.528</pos>
         <size>0.0183333 0.0407407</size><!-- 44 44 -->
      </image>
      <text name="game-playtime,game-playtime-shadow">
         <fontSize>0.0333333</fontSize><!-- 36 -->
         <size>0 0.0333333</size><!-- 0 36 -->
         <lineSpacing>1.2</lineSpacing>
      </text>
      <text name="game-playtime">
         <pos>0.415 0.525</pos>
      </text>
      <text name="game-playtime-shadow">
         <pos>0.415 0.528</pos>
      </text>
      <image name="game-players-icon">
         <pos>0.39 0.575</pos>
         <size>0.0183333 0.0407407</size><!-- 44 44 -->
      </image>
      <image name="game-players-icon-shadow">
         <pos>0.39 0.578</pos>
         <size>0.0183333 0.0407407</size><!-- 44 44 -->
      </image>
      <text name="game-players,game-players-shadow">
         <pos>0.415 0.575</pos>
         <fontSize>0.0333333</fontSize><!-- 36 -->
         <size>0 0.0333333</size><!-- 0 36 -->
         <lineSpacing>1.2</lineSpacing>
      </text>
      <text name="game-players">
         <pos>0.415 0.575</pos>
      </text>
      <text name="game-players-shadow">
         <pos>0.415 0.578</pos>
      </text>
      <helpsystem name="help-left">
         <entries>b</entries>
      </helpsystem>
      <helpsystem name="help-right">
         <entries>back,a,x</entries>
      </helpsystem>
   </view>
   <variant name="gamelist-carousel-cover-marquee,gamelist-carousel-titlescreen-marquee,gamelist-carousel-physicalmedia-marquee">
      <view name="gamelist">
         <image name="gamelist-marquee">
            <pos>0.9583333 0.9074074</pos><!-- 100 100 -->
            <maxSize>0.25 0.370</maxSize><!-- 600 400 -->
         </image>
      </view>
   </variant>

</theme>