<theme>

   <!--
   ///
   Variables
   ///
   -->
	<variables>
      <fontLight>./_inc/fonts/FOT-NewRodin Pro L.otf</fontLight>
      <fontRegular>./_inc/fonts/FOT-NewRodin Pro DB.otf</fontRegular>
		<fontBold>./_inc/fonts/FOT-NewRodin Pro B.otf</fontBold>
      <spacerImage>./_inc/images/space.png</spacerImage>
	</variables>
   <include>./colors.xml</include>

   <!--
   ///
   All Views
   ///
   -->
   <view name="system,gamelist">
      <!-- Start: menu styling resets -->
      <helpsystem name="help-menu-view">
         <scope>menu</scope>
         <origin>0.5 1</origin>
         <pos>0.5 0.9875</pos>
         <iconColor>cccccc</iconColor>
         <textColor>cccccc</textColor>
         <backgroundColor>181818</backgroundColor>
         <backgroundHorizontalPadding>0.01 0.01</backgroundHorizontalPadding>
         <backgroundVerticalPadding>0.015 0.02</backgroundVerticalPadding>
         <backgroundCornerRadius>0.005</backgroundCornerRadius>
         <entryRelativeScale>0.9</entryRelativeScale>
      </helpsystem>
      <!-- End: menu styling resets -->
      <image name="background-image">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <cropSize>1 1</cropSize>
         <path>${backgroundImagePath}</path>
         <tile>${backgroundImageTile}</tile>
         <color>${backgroundColor}</color>
         <colorEnd>${backgroundColorEnd}</colorEnd>
         <gradientType>${backgroundGradientType}</gradientType>
         <saturation>${backgroundSaturation}</saturation>
         <zIndex>0</zIndex>
      </image>
      <video name="background-video">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <cropSize>1 1</cropSize>
         <path>${backgroundVideoPath}</path>
         <color>${backgroundColor}</color>
         <colorEnd>${backgroundColorEnd}</colorEnd>
         <gradientType>${backgroundGradientType}</gradientType>
         <saturation>${backgroundSaturation}</saturation>
         <fadeInTime>0</fadeInTime>
         <audio>false</audio>
         <zIndex>1</zIndex>
         <stationary>always</stationary>
         <visible>${showBackgroundVideo}</visible>
      </video>
      <image name="background-game-art">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <cropSize>1 1</cropSize>
         <color>${backgroundGameArtColor}</color>
         <saturation>${backgroundGameArtSaturation}</saturation>
         <zIndex>2</zIndex>
         <visible>false</visible>
      </image>
      <clock name="clock">
         <origin>0 0</origin>
         <fontPath>${fontRegular}</fontPath>
         <color>${textColor}</color>
      </clock>
      <systemstatus name="system-status">
         <origin>1 0</origin>
         <fontPath>${fontRegular}</fontPath>
         <customIcon icon="icon_bluetooth">./_inc/images/icon-bluetooth.svg</customIcon>
         <customIcon icon="icon_wifi">./_inc/images/icon-wifi.svg</customIcon>
         <customIcon icon="icon_cellular">./_inc/images/icon-cellular.svg</customIcon>
         <customIcon icon="icon_battery_charging">./_inc/images/icon-battery-charging.svg</customIcon>
         <customIcon icon="icon_battery_low">./_inc/images/icon-battery-low.svg</customIcon>
         <customIcon icon="icon_battery_medium">./_inc/images/icon-battery-medium.svg</customIcon>
         <customIcon icon="icon_battery_high">./_inc/images/icon-battery-high.svg</customIcon>
         <customIcon icon="icon_battery_full">./_inc/images/icon-battery-full.svg</customIcon>
         <color>${iconColor}</color>
      </systemstatus>
      <helpsystem name="help-left,help-right">
         <fontPath>${fontRegular}</fontPath>
         <letterCase>capitalize</letterCase>
         <iconColor>${iconColor}</iconColor>
         <textColor>${textColor}</textColor>
         <customButtonIcon button="button_a_XBOX">./_inc/images/help-button-a-XBOX.svg</customButtonIcon>
         <customButtonIcon button="button_a_PS">./_inc/images/help-button-a-PS.svg</customButtonIcon>
         <customButtonIcon button="button_a_SNES">./_inc/images/help-button-a-SNES.svg</customButtonIcon>
         <customButtonIcon button="button_a_switch">./_inc/images/help-button-a-switch.svg</customButtonIcon>
         <customButtonIcon button="button_b_XBOX">./_inc/images/help-button-b-XBOX.svg</customButtonIcon>
         <customButtonIcon button="button_b_PS">./_inc/images/help-button-b-PS.svg</customButtonIcon>
         <customButtonIcon button="button_b_SNES">./_inc/images/help-button-b-SNES.svg</customButtonIcon>
         <customButtonIcon button="button_b_switch">./_inc/images/help-button-b-switch.svg</customButtonIcon>
         <customButtonIcon button="button_x_XBOX">./_inc/images/help-button-x-XBOX.svg</customButtonIcon>
         <customButtonIcon button="button_x_PS">./_inc/images/help-button-x-PS.svg</customButtonIcon>
         <customButtonIcon button="button_x_SNES">./_inc/images/help-button-x-SNES.svg</customButtonIcon>
         <customButtonIcon button="button_x_switch">./_inc/images/help-button-x-switch.svg</customButtonIcon>
         <customButtonIcon button="button_start_PS123">./_inc/images/help-button-start-PS123.svg</customButtonIcon>
         <customButtonIcon button="button_start_XBOX">./_inc/images/help-button-start-XBOX.svg</customButtonIcon>
         <customButtonIcon button="button_start_PS5">./_inc/images/help-button-start-PS5.svg</customButtonIcon>
         <customButtonIcon button="button_start_switch">./_inc/images/help-button-start-switch.svg</customButtonIcon>
         <customButtonIcon button="button_start_XBOX360">./_inc/images/help-button-start-XBOX360.svg</customButtonIcon>
         <scope>view</scope>
      </helpsystem>
      <helpsystem name="help-left">
         <origin>0 1</origin>
      </helpsystem>
      <helpsystem name="help-right">
         <origin>1 1</origin>
      </helpsystem>
      <image name="metadata-line">
         <origin>0 0.5</origin>
         <path>${spacerImage}</path>
         <color>${lineColor}</color>
         <metadataElement>true</metadataElement>
         <zIndex>5</zIndex>
      </image>
	</view>

   <!--
   ///
   System View
   ///
   -->
   <view name="system">
      <image name="background-game-art">
         <imageType>${backgroundGameArtType}</imageType>
         <gameselector>background-game-art-selector</gameselector>
         <visible>${showBackgroundGameArtSystemView}</visible>
      </image>
      <gameselector name="background-game-art-selector">
         <selection>${backgroundGameArtSelector}</selection>
      </gameselector>
      <carousel name="system-carousel">
         <origin>0 0</origin>
         <type>horizontal</type>
         <defaultImage>./_inc/systems/controller/_default.png</defaultImage>
         <staticImage>./_inc/systems/controller/${system.theme}.png</staticImage>
         <imageColor>${iconColor}</imageColor>
         <unfocusedItemOpacity>0.9</unfocusedItemOpacity>
         <fastScrolling>true</fastScrolling>
         <color>00000000</color>
      </carousel>
      <image name="system-content">
         <origin>0.5 0.5</origin>
         <default>./_inc/systems/physical-media/_default.png</default>
         <path>./_inc/systems/physical-media/${system.theme}.png</path>
         <color>${iconColor}</color>
      </image>
      <text name="system-name">
         <origin>0 1</origin>
         <systemdata>fullname</systemdata>
         <fontPath>${fontBold}</fontPath>
         <color>${textColor}</color>
      </text>
      <text name="system-count">
         <origin>0 0</origin>
         <systemdata>gamecountGames</systemdata>
         <fontPath>${fontRegular}</fontPath>
         <color>${textColor}</color>
         <letterCase>capitalize</letterCase>
      </text>
   </view>

   <!--
   ///
   Gamelist View
   ///
   -->
   <view name="gamelist">
      <image name="background-game-art">
         <imageType>${backgroundGameArtType}</imageType>
         <visible>${showBackgroundGameArtGamelistView}</visible>
      </image>
      <carousel name="gamelist-carousel">
         <origin>0.5 0</origin>
         <type>vertical</type>
         <!--<defaultImage>./_inc/images/default_game.png</defaultImage>
         <defaultFolderImage>./_inc/images/default_game.png</defaultFolderImage>-->
         <unfocusedItemOpacity>0.9</unfocusedItemOpacity>
         <textColor>${textColor}</textColor>
         <textBackgroundColor>111111</textBackgroundColor>
         <fontPath>${fontBold}</fontPath>
         <color>00000000</color>
         <fastScrolling>true</fastScrolling>
      </carousel>
      <image name="back-arrow">
         <origin>0.5 0.5</origin>
         <path>./_inc/images/icon-arrow.svg</path>
         <color>${iconColor}</color>
         <metadataElement>true</metadataElement>
         <zIndex>50</zIndex>
      </image>
      <video name="game-video">
         <origin>0.5 0.5</origin>
         <imageType>none</imageType>
         <delay>2</delay>
         <fadeInType>transparent</fadeInType>
         <fadeInTime>0.3</fadeInTime>
         <videoCornerRadius>0.005</videoCornerRadius>
         <zIndex>50</zIndex>
      </video>
      <text name="game-name">
         <origin>0 1</origin>
         <metadata>name</metadata>
         <fontPath>${fontBold}</fontPath>
         <color>${textColor}</color>
         <systemNameSuffix>false</systemNameSuffix>
         <zIndex>50</zIndex>
      </text>
      <badges name="game-badges">
         <origin>1 0</origin>
         <horizontalAlignment>right</horizontalAlignment>
         <direction>row</direction>
         <lines>1</lines>
         <itemMargin>-1 0.004</itemMargin><!-- 24 -->
         <slots>collection,folder,favorite,completed</slots>
         <badgeIconColor>${iconColor}</badgeIconColor>
         <customBadgeIcon badge="collection">./_inc/images/badge-collection.svg</customBadgeIcon>
         <customBadgeIcon badge="folder">./_inc/images/badge-folder.svg</customBadgeIcon>
         <customBadgeIcon badge="favorite">./_inc/images/badge-favorite.svg</customBadgeIcon>
         <customBadgeIcon badge="completed">./_inc/images/badge-completed.svg</customBadgeIcon>
      </badges>
      <image name="game-players-icon">
         <origin>0 0</origin>
         <path>./_inc/images/icon-players.svg</path>
         <color>${iconColor}</color>
         <metadataElement>true</metadataElement>
         <zIndex>50</zIndex>
      </image>
      <text name="game-players">
         <origin>0 0</origin>
         <metadata>players</metadata>
         <defaultValue>Unknown</defaultValue>
         <fontPath>${fontRegular}</fontPath>
         <color>${textColor}</color>
         <zIndex>50</zIndex>
      </text>
      <image name="game-playtime-icon">
         <origin>0 0</origin>
         <path>./_inc/images/icon-playtime.svg</path>
         <color>${iconColor}</color>
         <metadataElement>true</metadataElement>
         <zIndex>50</zIndex>
      </image>
      <text name="game-playtime">
         <origin>0 0</origin>
         <metadata>playtime</metadata>
         <defaultValue>Never Played</defaultValue>
         <fontPath>${fontRegular}</fontPath>
         <color>${textColor}</color>
         <letterCase>capitalize</letterCase>
         <zIndex>50</zIndex>
      </text>
   </view>
   <variant name="gamelist-carousel-cover">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <imageType>cover</imageType>
         </carousel>
      </view>
   </variant>
   <variant name="gamelist-carousel-marquee">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <imageType>marquee</imageType>
         </carousel>
      </view>
   </variant>
   <variant name="gamelist-carousel-titlescreen">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <imageType>titlescreen</imageType>
         </carousel>
      </view>
   </variant>
   <variant name="gamelist-carousel-physicalmedia">
      <view name="gamelist">
         <carousel name="gamelist-carousel">
            <imageType>physicalmedia</imageType>
         </carousel>
      </view>
   </variant>

   <!--
   ///
   Aspect Ratios
   ///
   -->
   <aspectRatio name="16:9">
      <include>./aspect-ratio-16-9.xml</include>
   </aspectRatio>
   <aspectRatio name="16:10">
      <include>./aspect-ratio-16-10.xml</include>
   </aspectRatio>
   <aspectRatio name="4:3">
      <include>./aspect-ratio-4-3.xml</include>
   </aspectRatio>
   <aspectRatio name="3:2">
      <include>./aspect-ratio-3-2.xml</include>
   </aspectRatio>
   <aspectRatio name="1:1">
      <include>./aspect-ratio-1-1.xml</include>
   </aspectRatio>
   <aspectRatio name="8:7">
      <include>./aspect-ratio-8-7.xml</include>
   </aspectRatio>
   <aspectRatio name="20:9">
      <include>./aspect-ratio-20-9.xml</include>
   </aspectRatio>

   <!--
   ///
   Sounds
   ///
   -->
   <view name="all">
      <sound name="systembrowse">
         <path>./_inc/sounds/systembrowse.wav</path>
      </sound>
      <sound name="quicksysselect">
         <path>./_inc/sounds/quicksysselect.wav</path>
      </sound>
      <sound name="select">
         <path>./_inc/sounds/select.wav</path>
      </sound>
      <sound name="back">
         <path>./_inc/sounds/back.wav</path>
      </sound>
      <sound name="scroll">
         <path>./_inc/sounds/scroll.wav</path>
      </sound>
      <sound name="favorite">
         <path>./_inc/sounds/favorite.wav</path>
      </sound>
      <sound name="launch">
         <path>./_inc/sounds/launch.wav</path>
      </sound>
   </view>

</theme>